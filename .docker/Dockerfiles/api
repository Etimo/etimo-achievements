FROM ghcr.io/etimo/etimo-achievements/base:latest AS develop
ENV PORT=3000
WORKDIR /app/packages/api
COPY --chown=1000:1000 packages/api .
EXPOSE $PORT
CMD ["npm", "run", "dev"]

FROM develop AS build
RUN npm run compile
RUN yarn workspaces focus --all --production

FROM node:14-alpine AS production
ENV PORT=3000
WORKDIR /app
COPY --chown=1000:1000 --from=build /app/node_modules ./node_modules
COPY --chown=1000:1000 --from=build /app/packages /app/packages
COPY --chown=1000:1000 --from=build /app/packages/api/dist .
EXPOSE $PORT
CMD ["node", "index.js"]

{
  "name": "@etimo-achievements/security",
  "version": "1.0.0",
  "description": "Security-related functions",
  "author": "Niclas Lindstedt <niclas.lindstedt@etimo.se>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "node ../../scripts/remove-path.js --recursive dist tsconfig.build.tsbuildinfo",
    "clear": "npm run clean && node ../../scripts/remove-path.js --recursive node_modules",
    "compile": "npx tsc --project tsconfig.build.json",
    "compile-test": "npx tsc --build",
    "test-integration": "exit 0; npx jest --testMatch '**/src/**/*.spec.ts'",
    "test": "exit 0; npx jest --testMatch '**/src/**/*.test.ts'"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "secure-random-password": "^0.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.25",
    "@types/secure-random-password": "^0.2.1",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "detectOpenHandles": true,
    "preset": "ts-jest",
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "@etimo-achievements/api(.*)$": "<rootDir>/../api/src/$1",
      "@etimo-achievements/common(.*)$": "<rootDir>/../common/src/$1",
      "@etimo-achievements/data(.*)$": "<rootDir>/../data/src/$1",
      "@etimo-achievements/express-middleware(.*)$": "<rootDir>/../express-middleware/src/$1",
      "@etimo-achievements/security(.*)$": "<rootDir>/../security/src/$1",
      "@etimo-achievements/service(.*)$": "<rootDir>/../service/src/$1",
      "@etimo-achievements/types(.*)$": "<rootDir>/../types/src/$1",
      "@etimo-achievements/web(.*)$": "<rootDir>/../web/src/$1"
    }
  }
}

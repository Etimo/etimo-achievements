{
  "name": "@etimo-achievements/data",
  "version": "1.0.0",
  "description": "Database entities & repositories",
  "author": "Niclas Lindstedt <niclas.lindstedt@etimo.se>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "clear": "npm run clean && rimraf node_modules",
    "compile": "tsc --build",
    "knex:dev": "knex --knexfile src/config/knexfile.ts --env development",
    "knex:local": "knex --knexfile src/config/knexfile.ts --env local",
    "knex:prod": "knex --knexfile src/config/knexfile.ts --env production",
    "migration-apply": "yarn knex:local migrate:latest",
    "migration-new": "yarn knex:local migrate:make",
    "migration-revert": "yarn knex:local migrate:down",
    "seed-new": "yarn knex:local seed:make",
    "seed-run": "yarn knex:local seed:run",
    "test-integration": "exit 0; jest --preset ts-jest --env node --testMatch \"**/src/**/*.spec.ts\" --modulePathIgnorePatterns dist",
    "test": "exit 0; jest --preset ts-jest --env node --testMatch \"**/src/**/*.test.ts\" --modulePathIgnorePatterns dist"
  },
  "dependencies": {
    "@etimo-achievements/common": "^1.0.0",
    "@etimo-achievements/security": "^1.0.0",
    "knex": "~0.21.21",
    "objection": "^2.2.16",
    "pg": "^8.7.1",
    "spacetime": "^6.16.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}

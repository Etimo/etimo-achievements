{
  "name": "@etimo-achievements/data",
  "version": "1.0.0",
  "description": "Database entities & repositories",
  "author": "Niclas Lindstedt <niclas.lindstedt@etimo.se>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "clear": "rimraf node_modules",
    "compile": "tsc --build; cp -f package.json dist",
    "knex:dev": "knex --knexfile src/config/knexfile.ts --env development",
    "knex:local": "knex --knexfile src/config/knexfile.ts --env local",
    "knex:prod": "knex --knexfile src/config/knexfile.ts --env production",
    "migrate": "yarn knex:local migrate:latest",
    "new-migration": "yarn knex:local migrate:make",
    "new-seed": "yarn knex:local seed:make",
    "seed": "yarn knex:local seed:run",
    "test": "exit 0"
  },
  "dependencies": {
    "@etimo-achievements/common": "^1.0.0",
    "@etimo-achievements/security": "^1.0.0",
    "knex": "~0.21.21",
    "objection": "^2.2.16",
    "pg": "^8.7.1",
    "spacetime": "^6.16.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}

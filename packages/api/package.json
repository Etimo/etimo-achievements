{
  "name": "@etimo-achievements/api",
  "version": "1.0.0",
  "description": "Authenticates a user with OAuth2",
  "author": "Niclas Lindstedt <niclas.lindstedt@etimo.se>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "node ../../scripts/remove-path.js --recursive dist tsconfig.build.tsbuildinfo",
    "clear": "npm run clean && node ../../scripts/remove-path.js --recursive node_modules",
    "compile": "../../node_modules/.bin/tsc --project tsconfig.build.json",
    "compile-test": "../../node_modules/.bin/tsc --build",
    "dev": "npx nodemon",
    "start": "npx ts-node src/index.ts",
    "openapi": "npx ts-node generate-openapi.ts",
    "test-integration": "exit 0; npx jest --testMatch '**/src/**/*.spec.ts'",
    "test": "npx jest --testMatch '**/src/**/*.test.ts'"
  },
  "dependencies": {
    "@etimo-achievements/common": "^1.0.0",
    "@etimo-achievements/express-middleware": "^1.0.0",
    "@etimo-achievements/security": "^1.0.0",
    "@etimo-achievements/service": "^1.0.0",
    "@etimo-achievements/types": "^1.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.2",
    "express-winston": "^4.2.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-jest": "^27.3.1",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "detectOpenHandles": true,
    "preset": "ts-jest",
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "@etimo-achievements/api(.*)$": "<rootDir>/../api/src/$1",
      "@etimo-achievements/common(.*)$": "<rootDir>/../common/src/$1",
      "@etimo-achievements/data(.*)$": "<rootDir>/../data/src/$1",
      "@etimo-achievements/express-middleware(.*)$": "<rootDir>/../express-middleware/src/$1",
      "@etimo-achievements/security(.*)$": "<rootDir>/../security/src/$1",
      "@etimo-achievements/service(.*)$": "<rootDir>/../service/src/$1",
      "@etimo-achievements/types(.*)$": "<rootDir>/../types/src/$1",
      "@etimo-achievements/web(.*)$": "<rootDir>/../web/src/$1"
    }
  }
}

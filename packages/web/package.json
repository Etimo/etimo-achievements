{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.25",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "node ../../scripts/remove-path.js --recursive dist tsconfig.build.tsbuildinfo",
    "clear": "npm run clean && node ../../scripts/remove-path.js --recursive node_modules",
    "compile-test": "../../node_modules/.bin/tsc --build",
    "compile": "npx react-scripts build",
    "eject": "npx react-scripts eject",
    "start": "PORT=3001 npx react-scripts start",
    "start-watch": "PORT=3001 npx react-scripts start --watch",
    "test-integration": "exit 0; npx jest --testMatch '**/src/**/*.spec.ts'",
    "test": "exit 0; npx jest --testMatch '**/src/**/*.test.ts'"
  },
  "eslintConfig": {
    "extends": []
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "detectOpenHandles": true,
    "preset": "ts-jest",
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "@etimo-achievements/api(.*)$": "<rootDir>/../api/src/$1",
      "@etimo-achievements/common(.*)$": "<rootDir>/../common/src/$1",
      "@etimo-achievements/data(.*)$": "<rootDir>/../data/src/$1",
      "@etimo-achievements/express-middleware(.*)$": "<rootDir>/../express-middleware/src/$1",
      "@etimo-achievements/security(.*)$": "<rootDir>/../security/src/$1",
      "@etimo-achievements/service(.*)$": "<rootDir>/../service/src/$1",
      "@etimo-achievements/types(.*)$": "<rootDir>/../types/src/$1",
      "@etimo-achievements/web(.*)$": "<rootDir>/../web/src/$1"
    }
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.3.3"
  }
}
